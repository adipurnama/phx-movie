<div>
  <a href="<%= Routes.actor_path(@conn, :show, @actor.id) %>">
    <img src="<%= profile_image_url(@actor) %>" alt="<%= profile_image_alt(@actor) %>" class="hover:opacity-75 transition ease-in-out duration-150"/>
  </a>
  <div class="mt-2">
    <a href="<%= Routes.actor_path(@conn, :show, @actor.id) %>" class="mt-2 text-lg hover:text-gray-300"><%= @actor.name %></a>
    <div class="text-sm text-gray-400">
      <%= @actor.character %>
    </div>
  </div>
</div>
